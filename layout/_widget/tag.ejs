<% if (site.tags.length){ %>
<div id="widget_tag" class="widget  panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><%= __('tags') %></h3>
    </div>
    <div class="panel-body">
        <ul class="list-unstyled">
            <% site.tags.sort('name').each(function(item){ %>
            <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a>
                <small><%= item.posts.length %></small>
            </li>
            <% }); %>
        </ul>
    </div>
</div>
<% } %>