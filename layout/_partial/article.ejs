<article class="<%= item.layout %>">
    <% if (item.photos){ %>
    <%- partial('post/gallery') %>
    <% } %>
    <header>
        <%- partial('post/title') %>
        <ul class="list-inline">
            <li>
                <span class="glyphicon glyphicon-calendar"></span>&nbsp;&nbsp;
                <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%=item.date.format(config.date_format)
                    %></a></time>
            </li>
            <!--首页上的tags显示在这里-->
            <% if (index){ %>
            <li>
                <%- partial('post/tag') %>
            </li>
            <% } %>
        </ul>
    </header>
    <div class="entry">
        <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
        <% } else { %>
        <%- item.content %>
        <% } %>
    </div>
    <footer>
        <% if (index){ %>
        <% if (item.excerpt){ %>
        <span class="btn btn-primary btn-xs">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%=theme.excerpt_link %></a>
        </span>
        <% } %>
        <% if (item.comment && config.disqus_shortname){ %>
        <div class="alignright">
            <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
        </div>
        <% } %>
        <% } else { %>
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
        <%- partial('post/baidushare') %>
        <% } %>
        <div class="clearfix"></div>
        <div class="split-line"></div>
    </footer>
</article>
<%- partial('comment') %>